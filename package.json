{
  "name": "user-agent",
  "version": "0.1.0",
  "description": "Simulate real human users to discover UX blind spots",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "user-agent": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js"
    }
  },
  "scripts": {
    "dev": "tsx --env-file=.env src/cli/index.ts",
    "dev:server": "tsx --env-file=.env src/server/index.ts",
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "start:server": "node dist/server/index.js",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ux",
    "testing",
    "ai",
    "playwright",
    "automation",
    "user-simulation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "commander": "^12.1.0",
    "fastify": "^5.0.0",
    "playwright": "^1.49.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
